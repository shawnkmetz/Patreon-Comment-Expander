{
  "manifest_version": 3,
  "name": "Patreon Comment Loader",
  "version": "1.0",
  "description": "Automatically clicks 'Load more comments' and 'Load Replies' on Patreon posts.",
  "permissions": ["scripting"],
  "content_scripts": [
    {
      "matches": ["https://www.patreon.com/posts/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
